{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@maily-to/core": ["node_modules/@maily-to/core"],
      "@/*": [
        "./*"
      ],
      "@next/third-parties/google": [
        "./node_modules/@next/third-parties/dist/google"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
